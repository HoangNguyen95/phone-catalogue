    "jest": "^21.2.1",
    "nodemon": "^1.19.4",
    "ts-jest": "^21.2.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.20.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
